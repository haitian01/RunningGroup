<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/top" />
            <!--定义填充的颜色值-->
            <!--  描边-->
            <!--<stroke android:width="1sp" android:color="" />-->
            <!--定义描边的宽度和描边的颜色值-->
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <!--  <padding
                  android:bottom="10dp"
                  android:left="10dp"
                  android:right="10dp"
                  android:top="10dp" />--> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/blue_dep" />
            <!--定义填充的颜色值-->
            <!--  描边-->
            <!--<stroke android:width="1sp" android:color="@color/gray" />-->
            <!--定义描边的宽度和描边的颜色值-->
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <!--  <padding
                  android:bottom="10dp"
                  android:left="10dp"
                  android:right="10dp"
                  android:top="10dp" />--> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>
</selector>