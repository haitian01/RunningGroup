<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewAndController.MainInterface"
    android:background="@color/grey">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        custom:pager_animation="Accordion"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100">
    </com.daimajia.slider.library.SliderLayout>

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:selected_color="#0095BF"
        custom:unselected_color="#55333333"
        custom:selected_drawable="@mipmap/bird"
        custom:shape="oval"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        android:layout_centerHorizontal="true"
        custom:selected_width="6dp"
        custom:selected_height="6dp"
        custom:unselected_width="6dp"
        custom:unselected_height="6dp"
        android:layout_marginTop="155dp">
    </com.daimajia.slider.library.Indicators.PagerIndicator>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        >

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="167dp"
            android:layout_height="159dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="135dp"
            android:background="@drawable/btn_noraml">
            <TextView
                android:id="@+id/text00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动数据"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总运动"
                android:textSize="17dp"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                />
            <TextView
                android:id="@+id/SportData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="40dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="82dp"
                />
            <TextView
                android:id="@+id/text04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/SportData"
                android:layout_marginLeft="05dp"
                android:layout_marginTop="110dp"
                />
            <ImageView
                android:id="@+id/picture_right01"
                android:background="@mipmap/right_line"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="125dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button1"
            android:layout_width="167dp"
            android:layout_height="159dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="135dp"
            android:layout_toRightOf="@id/button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/btn_noraml">
            >
            <TextView
                android:id="@+id/text03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分数据"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总积分"
                android:textSize="17dp"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                />
            <TextView
                android:id="@+id/Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="40dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="82dp"
                />
            <TextView
                android:id="@+id/text05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="points"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/Score"
                android:layout_marginLeft="05dp"
                android:layout_marginTop="110dp"
                />
            <ImageView
                android:id="@+id/picture_right02"
                android:background="@mipmap/right_line"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="125dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/picture_01"
            android:layout_width="167dp"
            android:layout_height="159dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="135dp"
            android:layout_marginTop="170dp"
            android:background="@mipmap/sport01"
            >
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/picture_02"
            android:layout_width="167dp"
            android:layout_height="159dp"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="135dp"
            android:layout_toRightOf="@id/button"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/sport04"
            >
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="530dp"
        app:srcCompat="@mipmap/slogan02" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp">

    </RelativeLayout>

</RelativeLayout>