<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跑步量:"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/friendmanage_runNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/run"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="999km"/>
        <ImageView
            android:id="@+id/friendmanage_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/group"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/friendmanage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/friendmanage_img"
            android:text="张三"/>
        <TextView
            android:id="@+id/friendmanage_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/friendmanage_img"
            android:text="北邮跑团"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/friendmanage_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/friendmanage">

    </ListView>

</LinearLayout>